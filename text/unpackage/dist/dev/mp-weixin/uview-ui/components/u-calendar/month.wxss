view, scroll-view, swiper-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
.u-calendar-month-wrapper {
  margin-top: 4px;
}
.u-calendar-month__title {
  font-size: 14px;
  line-height: 42px;
  height: 42px;
  color: #303133;
  text-align: center;
  font-weight: bold;
}
.u-calendar-month__days {
  position: relative;

  display: flex;

  flex-direction: row;
  flex-wrap: wrap;
}
.u-calendar-month__days__month-mark-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;

  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.u-calendar-month__days__month-mark-wrapper__text {
  font-size: 155px;
  color: rgba(231, 232, 234, 0.83);
}
.u-calendar-month__days__day {

  display: flex;

  flex-direction: row;
  padding: 2px;
}
.u-calendar-month__days__day__select {
  flex: 1;

  display: flex;

  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: relative;
}
.u-calendar-month__days__day__select__dot {
  width: 7px;
  height: 7px;
  border-radius: 100px;
  background-color: #f56c6c;
  position: absolute;
  top: 12px;
  right: 7px;
}
.u-calendar-month__days__day__select__buttom-info {
  color: #606266;
  text-align: center;
  position: absolute;
  bottom: 5px;
  font-size: 10px;
  text-align: center;
  left: 0;
  right: 0;
}
.u-calendar-month__days__day__select__buttom-info--selected {
  color: #ffffff;
}
.u-calendar-month__days__day__select__buttom-info--disabled {
  color: #cacbcd;
}
.u-calendar-month__days__day__select__info {
  text-align: center;
  font-size: 16px;
}
.u-calendar-month__days__day__select__info--selected {
  color: #ffffff;
}
.u-calendar-month__days__day__select__info--disabled {
  color: #cacbcd;
}
.u-calendar-month__days__day__select--selected {
  background-color: #3c9cff;

  display: flex;

  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex: 1;
  border-radius: 3px;
}
.u-calendar-month__days__day__select--range-selected {
  opacity: 0.3;
  border-radius: 0;
}
.u-calendar-month__days__day__select--range-start-selected {
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}
.u-calendar-month__days__day__select--range-end-selected {
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}

